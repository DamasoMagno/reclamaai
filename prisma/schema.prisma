generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Reclamação
model Complaint {
  id        String   @id @default(uuid())
  text      String
  location  String
  topic     Topic    @relation(fields: [topicId], references: [id])
  topicId   String
  createdAt DateTime @default(now())
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  topics    Topic[]
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Tópico relacionado à reclamação
model Topic {
  id           String      @id @default(uuid())
  title        String
  summary      String
  priority     Priority    @default(MEDIUM)
  suportCount  Int         @default(0)
  rejectCount  Int         @default(0)
  locationHint String?
  category     Category    @relation(fields: [categoryId], references: [id])
  categoryId   String
  categoryHint String?
  createdAt    DateTime    @default(now())
  complaints   Complaint[]
}
